<% include partials/header %>
<br>
<div class="container">

    <div class="container">
        <form class="form-horizontal" action="/users-log/user" method="POST">
            <div class="form-group">
                <label class="control-label col-sm-2">User Id: </label>
                <div class="col-sm-10">
                    <input style="width:60%" type="text" class="form-control" name="uid" value="<%=user.uid%>" readonly>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Name: </label>
                <div class="col-sm-10">
                    <input style="width:60%" type="text" class="form-control" name="username" value="<%=user.name%>">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Contact:</label>
                <div class="col-sm-10">
                    <input style="width:60%" type="text" class="form-control" name="contact" value="<%=user.contact%>">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Locality:</label>
                <div class="col-sm-10">
                    <input style="width:60%" type="text" class="form-control" name="locality" value="<%=user.locality%>">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Current Maids:</label>
                <div class="col-sm-10">
                    <ul style="border: 1px solid lightgrey; width:60%">
                        <% user.maids.forEach(function(maid) { %>
                            <li><%= maid %></li>
                        <% }) %>
                    </ul>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button class="btn btn-success" style="width:60%">Update</button>
                </div>
            </div>
        </form>

        <form action="/users-log/<%=user.uid%>/delete_user" method="POST">
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button class="btn btn-danger" style="width:60%">Delete User</button>
                </div>
            </div>
        </form>
    </div>

</div>