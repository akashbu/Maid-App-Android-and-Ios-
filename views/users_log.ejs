<% include partials/header %>

<div class="container">

    <div class="container" style="border:1px solid grey; padding:10px">
        
            <center><h5 style="font-weight:bold">Register New User:</h5></center>
            <br>
            <form class="form-horizontal" action="/add_user" method="POST">
                <div class="form-group">
                    <label class="control-label col-sm-2">Name: </label>
                    <div class="col-sm-10">
                        <input style="width:80%" type="text" class="form-control" name="username" placeholder="Name" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Contact:</label>
                    <div class="col-sm-10">
                        <input style="width:80%" type="text" class="form-control" name="contact" placeholder="Contact No." required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Locality:</label>
                    <div class="col-sm-10">
                        <input style="width:80%" type="text" class="form-control" name="locality" placeholder="Locality" required>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button class="btn btn-success" style="width:80%">Add User</button>
                    </div>
                </div>
            </form>
        
    </div>

    <br>
    <hr style="border: 1px solid grey;" />

    <div class="container">
        <center>
            <h5 style="font-weight:bold">Registered Users' List</h5>
        </center>
        <br>
        <table style="width:100%; border:2px solid grey;">
            <tr style="border:1px solid grey;">
                <th>UID</th>
                <th>Name</th>
                <th>Contact</th>
                <th>Locality</th>
            </tr>

            <% userData.forEach(function(element) { %>
            <tr style="border:1px solid grey;">
                <td> <a href="/users-log/<%=element.uid%>">
                        <%= element.uid %> </a> </td>
                <td>
                    <%= element.name %>
                </td>
                <td>
                    <%= element.contact %>
                </td>
                <td>
                    <%= element.locality %>
                </td>
            </tr>
            <% }) %>

        </table>

    </div>


</div>


















<% include partials/footer %>