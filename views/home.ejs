<% include partials/header %>

<center>
    <div class="container">
        <h3>Welcome to Admin Panel</h3>

        <br><br>

        <div class="row">
            <div class="col-xs-6">
                <form method="GET" action="/users-log">
                    <button class="btn btn-lg btn-info">Users Log</button>
                </form>
            </div>

            <div class="col-xs-6">
                <form method="GET" action="/maids-log">
                    <button class="btn btn-lg btn-info">Maids Log</button>
                </form>
            </div>
        </div>
        <br><br>
        <div class="container">
            <h4 style="font-weight:bold">Pending Requests</h4>
            <br>

            <% requests.forEach(function(req) { %>
            <form class="form-horizontal" action="/confirm" method="POST" style="border:1px solid grey">
                <div class="form-group" style="margin:5px">
                    <label class="control-label col-sm-2">User: </label>
                    <div class="col-sm-10">
                        <input style="width:60%" type="text" class="form-control" name="user" value="<%=req.user%>" readonly>
                    </div>
                </div>
                <div class="form-group" style="margin:5px">
                    <label class="control-label col-sm-2">Maid: </label>
                    <div class="col-sm-10">
                        <input style="width:60%" type="text" class="form-control" name="maid" value="<%=req.maid%>" readonly>
                    </div>
                </div>
                <div class="form-group" style="margin:5px">
                    <label class="control-label col-sm-2">Maid Contact: </label>
                    <div class="col-sm-10">
                        <input style="width:60%" type="text" class="form-control" name="maidno" value="<%=req.maidno%>" readonly>
                    </div>
                </div>
                <div class="form-group" style="margin:5px">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button class="btn btn-info" style="width:60%">Confirm</button>
                    </div>
                </div>
                <div class="form-group" style="margin:5px">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button class="btn btn-danger" style="width:60%">Cancel</button>
                    </div>
                </div>
            </form>
            <br><br>
            <% }) %>

        </div>

    </div>
</center>

<% include partials/footer %>